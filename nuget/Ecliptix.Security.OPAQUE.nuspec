<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <id>Ecliptix.Security.OPAQUE</id>
    <version>1.0.0</version>
    <title>Ecliptix Security OPAQUE Protocol</title>
    <authors>Ecliptix</authors>
    <owners>Ecliptix</owners>
    <license type="expression">MIT</license>
    <projectUrl>https://github.com/ecliptix/security-opaque</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      High-performance native implementation of the OPAQUE Password-Authenticated Key Exchange (PAKE) protocol.
      Provides secure password authentication without transmitting passwords to the server.
      Built with C++23 and libsodium cryptographic primitives.

      Supports: Windows (x64), Linux (x64/arm64), macOS (x64/arm64)
    </description>
    <summary>Native OPAQUE PAKE protocol implementation for secure password authentication</summary>
    <releaseNotes>
      v1.0.0 - Initial release
      - Full OPAQUE protocol implementation (registration + authentication)
      - Ristretto255 elliptic curve support
      - Cross-platform native libraries
      - P/Invoke ready exports
    </releaseNotes>
    <copyright>Copyright (c) 2024-2025 Ecliptix. All rights reserved.</copyright>
    <tags>opaque pake password authentication security cryptography native interop p-invoke</tags>
    <repository type="git" url="https://github.com/ecliptix/security-opaque.git" branch="main" />
    <readme>docs/README.md</readme>

    <!-- Dependencies (none for native package) -->
    <dependencies>
      <group targetFramework="net6.0" />
      <group targetFramework="net7.0" />
      <group targetFramework="net8.0" />
      <group targetFramework="netstandard2.0" />
      <group targetFramework="netstandard2.1" />
    </dependencies>
  </metadata>

  <files>
    <!-- MSBuild targets for automatic native library handling -->
    <file src="build\Ecliptix.Security.OPAQUE.targets" target="build" />
    <file src="build\Ecliptix.Security.OPAQUE.targets" target="buildTransitive" />

    <!-- Windows x64 -->
    <file src="runtimes\win-x64\native\eop.agent.dll" target="runtimes\win-x64\native" />
    <file src="runtimes\win-x64\native\eop.relay.dll" target="runtimes\win-x64\native" />

    <!-- Linux x64 -->
    <file src="runtimes\linux-x64\native\libeop.agent.so" target="runtimes\linux-x64\native" />
    <file src="runtimes\linux-x64\native\libeop.relay.so" target="runtimes\linux-x64\native" />

    <!-- Linux ARM64 -->
    <file src="runtimes\linux-arm64\native\libeop.agent.so" target="runtimes\linux-arm64\native" />
    <file src="runtimes\linux-arm64\native\libeop.relay.so" target="runtimes\linux-arm64\native" />

    <!-- macOS x64 (Intel) -->
    <file src="runtimes\osx-x64\native\libeop.agent.dylib" target="runtimes\osx-x64\native" />
    <file src="runtimes\osx-x64\native\libeop.relay.dylib" target="runtimes\osx-x64\native" />

    <!-- macOS ARM64 (Apple Silicon) -->
    <file src="runtimes\osx-arm64\native\libeop.agent.dylib" target="runtimes\osx-arm64\native" />
    <file src="runtimes\osx-arm64\native\libeop.relay.dylib" target="runtimes\osx-arm64\native" />

    <!-- Documentation -->
    <file src="..\docs\README.md" target="docs" />
  </files>
</package>
